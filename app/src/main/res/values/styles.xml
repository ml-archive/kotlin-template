<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="znstack_DialogTitleStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="znstack_DialogStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:textColor">#000</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowTitleStyle">@style/znstack_DialogTitleStyle</item>
    </style>

</resources>
